    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:paddingTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EFEFEF" />

</LinearLayout>