<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/image_corner_curve"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp"
        android:src="@drawable/food_placeholder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Xo Belgain Waffle"
                android:textSize="13sp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:textColor="#1c1c1c"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rating_background"
                android:layout_alignParentEnd="true"
                android:text="4.1"
                android:textSize="13sp"
                android:textColor="#ffffff" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#5D5D67"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="Fast Food, Sandwich"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:gravity="center_vertical"
            android:paddingTop="3dp">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/icon_rupee"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textSize="8sp"
                android:layout_marginRight="2dp"
                android:textColor="#5D5D67"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="per person"
                android:textSize="8sp"
                android:textColor="#5D5D67"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">
            <ImageView
                android:id="@+id/live_tracking_icon"
                android:layout_alignParentStart="true"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_live_tracking"/>

            <TextView
                android:layout_toRightOf="@+id/live_tracking_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Tracking"
                android:textColor="#1c1c1c"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/delivery_time"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25-35 Mins"
                android:textSize="8sp"
                android:textColor="#1c1c1c"/>

            <ImageView
                android:layout_toLeftOf="@+id/delivery_time"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_live_tracking"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EFEFEF"/>
</LinearLayout>